{
  "annotations": {
    "list": []
  },
  "description": "VPN Infrastructure Overview Dashboard",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "id": 1,
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "targets": [
        {
          "expr": "count(up{job=~\".*wireguard.*|.*wg.*\"} == 1)",
          "refId": "A"
        }
      ],
      "title": "WireGuard Servers Online",
      "type": "stat"
    },
    {
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "id": 2,
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "targets": [
        {
          "expr": "sum(wireguard_peers)",
          "refId": "A"
        }
      ],
      "title": "Total Active Peers",
      "type": "stat"
    },
    {
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "id": 3,
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "targets": [
        {
          "expr": "sum(rate(node_network_receive_bytes_total{device=~\"wg.*|awg.*\"}[5m])) * 8",
          "refId": "A"
        }
      ],
      "title": "Total Bandwidth (bps)",
      "type": "stat"
    },
    {
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "id": 4,
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "targets": [
        {
          "expr": "count(up{job=\"node\"} == 0)",
          "refId": "A"
        }
      ],
      "title": "Servers Down",
      "type": "stat",
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 3 }
            ]
          }
        }
      }
    },
    {
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "id": 5,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "targets": [
        {
          "expr": "sum by (region) (wireguard_peers)",
          "legendFormat": "{{ region }}",
          "refId": "A"
        }
      ],
      "title": "Active Peers by Region",
      "type": "timeseries"
    },
    {
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "id": 6,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "targets": [
        {
          "expr": "sum by (instance) (rate(node_network_receive_bytes_total{device=~\"wg.*|awg.*\"}[5m])) * 8",
          "legendFormat": "{{ instance }}",
          "refId": "A"
        }
      ],
      "title": "Bandwidth by Server",
      "type": "timeseries"
    },
    {
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 12 },
      "id": 7,
      "targets": [
        {
          "expr": "avg by (region) (node_load1)",
          "legendFormat": "{{ region }}",
          "refId": "A"
        }
      ],
      "title": "CPU Load by Region",
      "type": "timeseries"
    },
    {
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 12 },
      "id": 8,
      "targets": [
        {
          "expr": "avg by (region) ((node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100)",
          "legendFormat": "{{ region }}",
          "refId": "A"
        }
      ],
      "title": "Memory Usage by Region (%)",
      "type": "timeseries"
    },
    {
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 12 },
      "id": 9,
      "targets": [
        {
          "expr": "avg by (region) ((node_filesystem_size_bytes{mountpoint=\"/\"} - node_filesystem_avail_bytes{mountpoint=\"/\"}) / node_filesystem_size_bytes{mountpoint=\"/\"} * 100)",
          "legendFormat": "{{ region }}",
          "refId": "A"
        }
      ],
      "title": "Disk Usage by Region (%)",
      "type": "timeseries"
    },
    {
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 20 },
      "id": 10,
      "options": {
        "showHeader": true
      },
      "targets": [
        {
          "expr": "up{job=\"node\"}",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "title": "Server Status",
      "type": "table",
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true
            },
            "renameByName": {
              "instance": "Server",
              "region": "Region",
              "Value": "Status"
            }
          }
        }
      ]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["vpn", "infrastructure", "overview"],
  "templating": {
    "list": [
      {
        "current": {},
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "definition": "label_values(up, region)",
        "name": "region",
        "options": [],
        "query": "label_values(up, region)",
        "refresh": 1,
        "type": "query"
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "title": "VPN Infrastructure Overview",
  "uid": "vpn-overview",
  "version": 1
}
