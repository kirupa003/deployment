# Fail2Ban main configuration
# Generated by Ansible - DO NOT EDIT MANUALLY

[Definition]

# Option: loglevel
# Notes.: Set the log level output.
#         CRITICAL, ERROR, WARNING, NOTICE, INFO, DEBUG
# Values: [ NONE | CRITICAL | ERROR | WARNING | NOTICE | INFO | DEBUG ]
loglevel = {{ fail2ban_loglevel }}

# Option: logtarget
# Notes.: Set the log target. This could be a file, SYSLOG, STDERR or STDOUT.
#         Only one log target can be specified.
# Values: [ STDOUT | STDERR | SYSLOG | /path/to/a/file ]
logtarget = {{ fail2ban_logtarget }}

# Option: syslogsocket
# Notes.: Set the syslog socket file. Only used when logtarget is SYSLOG
#         auto uses platform.system() to determine predefined paths
# Values: [ auto | /path/to/file ]
syslogsocket = auto

# Option: socket
# Notes.: Set the socket file. This is used to communicate with the daemon. Do
#         not remove this file when Fail2ban runs. It will not be possible to
#         communicate with the server afterwards.
# Values: [ /path/to/file ]
socket = /var/run/fail2ban/fail2ban.sock

# Option: pidfile
# Notes.: Set the PID file. This is used to store the process ID of the
#         fail2ban server.
# Values: [ /path/to/file ]
pidfile = /var/run/fail2ban/fail2ban.pid

# Options: dbfile
# Notes.: Set the file for the fail2ban persistent datastore. A value of ":memory:"
#         uses database in memory, otherwise a file on disk is used.
# Values: [ :memory: | /path/to/file ]
dbfile = /var/lib/fail2ban/fail2ban.sqlite3

# Options: dbpurgeage
# Notes.: Sets age at which bans should be purged from the database
# Values: [ seconds ]
dbpurgeage = 86400