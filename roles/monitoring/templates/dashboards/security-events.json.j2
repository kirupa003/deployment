{
  "dashboard": {
    "id": null,
    "title": "Security Events",
    "tags": ["security", "events", "auth", "crowdsec"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "{{ monitoring_dashboard_refresh_interval }}",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Authentication Events",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"auth\"} |= \"ssh\" or \"sudo\" or \"su\"",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 12, "w": 24, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Failed Login Attempts",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(node_auth_failures_total[5m]))",
            "refId": "A",
            "legendFormat": "Failed Logins/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
      },
      {
        "id": 3,
        "title": "Blocked IPs",
        "type": "stat",
        "targets": [
          {
            "expr": "crowdsec_blocked_ips_total",
            "refId": "A",
            "legendFormat": "Blocked IPs"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      }
    ],
    "schemaVersion": 30,
    "version": 1
  }
}