{
  "dashboard": {
    "id": null,
    "title": "VPN Service Metrics",
    "tags": ["vpn", "service", "metrics", "wireguard", "openvpn"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "{{ monitoring_dashboard_refresh_interval }}",
    "time": {
      "from": "now-{{ monitoring_dashboard_time_range }}",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "VPN Service Status",
        "type": "stat",
        "targets": [
          {
            "expr": "node_vpn_service_up{service=\"wg-quick@wg0\"}",
            "refId": "A",
            "legendFormat": "WireGuard"
          },
          {
            "expr": "node_vpn_service_up{service=\"openvpn@server\"}",
            "refId": "B",
            "legendFormat": "OpenVPN"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"0": {"text": "Down", "color": "red"}}, "type": "value"},
              {"options": {"1": {"text": "Up", "color": "green"}}, "type": "value"}
            ]
          }
        },
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Active Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(wireguard_peers_total)",
            "refId": "A",
            "legendFormat": "WireGuard Peers"
          },
          {
            "expr": "sum(node_openvpn_clients_total)",
            "refId": "B",
            "legendFormat": "OpenVPN Clients"
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 0}
      },
      {
        "id": 3,
        "title": "Connection Trends",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(wireguard_peers_total)",
            "refId": "A",
            "legendFormat": "WireGuard Peers"
          },
          {
            "expr": "sum(node_openvpn_clients_total)",
            "refId": "B",
            "legendFormat": "OpenVPN Clients"
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 0}
      },
      {
        "id": 4,
        "title": "WireGuard Bandwidth Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum by (instance) (rate(wireguard_peer_receive_bytes_total[5m]))",
            "refId": "A",
            "legendFormat": "{{ '{{' }} instance {{ '}}' }} - RX"
          },
          {
            "expr": "sum by (instance) (rate(wireguard_peer_transmit_bytes_total[5m]))",
            "refId": "B",
            "legendFormat": "{{ '{{' }} instance {{ '}}' }} - TX"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "binBps"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6}
      },
      {
        "id": 5,
        "title": "Peer Distribution by Server",
        "type": "bargauge",
        "targets": [
          {
            "expr": "wireguard_peers_total",
            "refId": "A",
            "legendFormat": "{{ '{{' }} instance {{ '}}' }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 500},
                {"color": "red", "value": {{ monitoring_alert_thresholds.high_connection_count }}}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6}
      },
      {
        "id": 6,
        "title": "Handshake Success Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(wireguard_peer_last_handshake_seconds[5m]) > 0",
            "refId": "A",
            "legendFormat": "{{ '{{' }} instance {{ '}}' }}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 14}
      }
    ],
    "templating": {
      "list": [
        {
          "name": "protocol",
          "type": "custom",
          "options": [
            {"text": "All", "value": ".*", "selected": true},
            {"text": "WireGuard", "value": "wireguard"},
            {"text": "OpenVPN", "value": "openvpn"}
          ]
        }
      ]
    },
    "schemaVersion": 30,
    "version": 1
  }
}