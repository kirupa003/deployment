# WireGuard Dashboard Configuration
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

[Account]
# Dashboard admin credentials
username = {{ wg_dashboard_admin_user }}
password = {{ vault_wg_dashboard_password | default('admin123!') }}

[Server]
# Dashboard server settings
wg_conf_path = {{ wireguard_config_dir }}
app_ip = 0.0.0.0
app_port = 5000
auth_req = true
version = {{ wg_dashboard_version }}

[Peers]
# Peer management settings
peer_global_dns = {{ wireguard_dns | join(',') if wireguard_dns is not string else wireguard_dns }}
peer_endpoint_allowed_ip = 0.0.0.0/0
peer_display_mode = grid
peer_mtu = {{ wireguard_mtu }}
peer_keepalive = {{ wireguard_persistent_keepalive }}

[Other]
# Additional settings
welcome_session = false
theme = {{ wg_dashboard_theme }}
sort_conf = name
dashboard_refresh_interval = 60000
dashboard_ip_port = {{ ansible_default_ipv4.address }}:{{ wg_dashboard_port }}