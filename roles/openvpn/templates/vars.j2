# Easy-RSA Variables
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

set_var EASYRSA_REQ_COUNTRY    "{{ openvpn_ca_country }}"
set_var EASYRSA_REQ_PROVINCE   "{{ openvpn_ca_province }}"
set_var EASYRSA_REQ_CITY       "{{ openvpn_ca_city }}"
set_var EASYRSA_REQ_ORG        "{{ openvpn_ca_org }}"
set_var EASYRSA_REQ_EMAIL      "{{ openvpn_ca_email }}"
set_var EASYRSA_REQ_OU         "{{ openvpn_ca_ou }}"

# Key settings
set_var EASYRSA_KEY_SIZE       {{ openvpn_key_size }}
set_var EASYRSA_ALGO           rsa
set_var EASYRSA_CA_EXPIRE      {{ openvpn_ca_expire }}
set_var EASYRSA_CERT_EXPIRE    {{ openvpn_cert_expire }}
set_var EASYRSA_DIGEST         "{{ openvpn_digest }}"

# Certificate extensions
set_var EASYRSA_EXT_DIR        "$EASYRSA/x509-types"

# Batch mode (non-interactive)
set_var EASYRSA_BATCH          "1"