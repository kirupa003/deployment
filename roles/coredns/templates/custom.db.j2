; CoreDNS Custom DNS Records
; Generated by Ansible - Do not edit manually

$ORIGIN local.
$TTL 300

@   IN  SOA localhost. admin.localhost. (
    {{ ansible_date_time.epoch }}  ; Serial
    3600                           ; Refresh
    1800                           ; Retry
    604800                         ; Expire
    300                            ; Minimum TTL
)

@   IN  NS  localhost.

; VPN infrastructure records
vpn-dashboard.local.    IN  A   {{ ansible_default_ipv4.address }}
dns.local.              IN  A   {{ ansible_default_ipv4.address }}
metrics.local.          IN  A   {{ ansible_default_ipv4.address }}

; Common local development domains
localhost.              IN  A   127.0.0.1
router.local.           IN  A   192.168.1.1