# CoreDNS Environment Variables
# Generated by Ansible - Do not edit manually

# Logging configuration
COREDNS_LOG_LEVEL={{ coredns_log_level }}
COREDNS_LOG_DIR={{ coredns_log_dir }}

# Performance tuning
GOMAXPROCS={{ coredns_worker_processes }}
GOGC=100

# Network configuration
COREDNS_LISTEN_ADDRESS={{ coredns_listen_address }}
COREDNS_LISTEN_PORT={{ coredns_listen_port }}

# Cache configuration
COREDNS_CACHE_SIZE={{ coredns_cache_size }}
COREDNS_CACHE_TTL={{ coredns_cache_ttl }}

# Metrics and monitoring
COREDNS_METRICS_PORT={{ coredns_metrics_port }}
COREDNS_HEALTH_PORT={{ coredns_health_port }}

# Ad-blocking configuration
COREDNS_ADBLOCK_ENABLED={{ coredns_adblock_enabled | lower }}
COREDNS_BLOCKLIST_DIR={{ coredns_data_dir }}/blocklists