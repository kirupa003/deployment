# CoreDNS log rotation configuration
# Generated by Ansible - Do not edit manually

{{ coredns_log_dir }}/*.log {
    daily
    rotate 30
    compress
    delaycompress
    missingok
    notifempty
    create 644 {{ coredns_user }} {{ coredns_group }}
    postrotate
        /bin/systemctl reload coredns > /dev/null 2>&1 || true
    endscript
}

{{ coredns_log_dir }}/blocklist-update.log {
    weekly
    rotate 12
    compress
    delaycompress
    missingok
    notifempty
    create 644 {{ coredns_user }} {{ coredns_group }}
}