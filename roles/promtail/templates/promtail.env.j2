# Promtail Environment Configuration
# Generated by Ansible - Do not edit manually

# Service configuration
PROMTAIL_USER={{ promtail_user }}
PROMTAIL_GROUP={{ promtail_group }}
PROMTAIL_PORT={{ promtail_port }}
PROMTAIL_LISTEN_ADDRESS={{ promtail_listen_address }}

# Data directories
PROMTAIL_CONFIG_DIR={{ promtail_config_dir }}
PROMTAIL_DATA_DIR={{ promtail_data_dir }}
PROMTAIL_LOG_DIR={{ promtail_log_dir }}

# Version information
PROMTAIL_VERSION={{ promtail_version }}

# Loki configuration
PROMTAIL_LOKI_URL={{ promtail_loki_url }}
{% if promtail_loki_tenant_id %}
PROMTAIL_LOKI_TENANT_ID={{ promtail_loki_tenant_id }}
{% endif %}

# Logging configuration
PROMTAIL_LOG_LEVEL={{ promtail_log_level }}
PROMTAIL_LOG_FORMAT={{ promtail_log_format }}

# Positions file
PROMTAIL_POSITIONS_FILE={{ promtail_positions_file }}

# Log rotation
PROMTAIL_LOG_ROTATION_ENABLED={{ promtail_log_rotation_enabled | lower }}
PROMTAIL_LOG_ROTATION_SIZE={{ promtail_log_rotation_size }}
PROMTAIL_LOG_ROTATION_COUNT={{ promtail_log_rotation_count }}