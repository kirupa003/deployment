# Promtail log rotation configuration
# Generated by Ansible - Do not edit manually

{{ promtail_log_dir }}/*.log {
    daily
    missingok
    rotate {{ promtail_log_rotation_count }}
    compress
    delaycompress
    notifempty
    create 0644 {{ promtail_user }} {{ promtail_group }}
    size {{ promtail_log_rotation_size }}
    postrotate
        /bin/systemctl reload promtail.service > /dev/null 2>&1 || true
    endscript
}