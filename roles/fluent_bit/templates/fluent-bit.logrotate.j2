# Fluent Bit log rotation configuration
# Generated by Ansible - Do not edit manually

{{ fluent_bit_log_dir }}/*.log {
    daily
    missingok
    rotate 7
    compress
    delaycompress
    notifempty
    create 0644 {{ fluent_bit_user }} {{ fluent_bit_group }}
    size 100M
    postrotate
        /bin/systemctl reload fluent-bit.service > /dev/null 2>&1 || true
    endscript
}