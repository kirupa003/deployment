# WireGuard Exporter Environment Configuration
# Generated by Ansible - Do not edit manually

# Service configuration
WG_EXPORTER_USER={{ wg_exporter_user }}
WG_EXPORTER_GROUP={{ wg_exporter_group }}
WG_EXPORTER_PORT={{ wg_exporter_port }}
WG_EXPORTER_LISTEN_ADDRESS={{ wg_exporter_listen_address }}

# Data directories
WG_EXPORTER_CONFIG_DIR={{ wg_exporter_config_dir }}
WG_EXPORTER_DATA_DIR={{ wg_exporter_data_dir }}

# WireGuard configuration
WG_EXPORTER_WIREGUARD_CONFIG_PATH={{ wg_exporter_wireguard_config_path }}
WG_EXPORTER_INTERFACES={{ wg_exporter_interfaces | join(',') }}

# Version information
WG_EXPORTER_VERSION={{ wg_exporter_version }}

# Metrics configuration
WG_EXPORTER_COLLECT_PEER_NAMES={{ wg_exporter_collect_peer_names | lower }}
WG_EXPORTER_SEPARATE_ALLOWED_IPS={{ wg_exporter_separate_allowed_ips | lower }}
WG_EXPORTER_EXPORT_REMOTE_IP_AND_PORT={{ wg_exporter_export_remote_ip_and_port | lower }}

# Logging configuration
WG_EXPORTER_LOG_LEVEL={{ wg_exporter_log_level }}
WG_EXPORTER_LOG_FORMAT={{ wg_exporter_log_format }}

# TLS configuration
WG_EXPORTER_TLS_ENABLED={{ wg_exporter_tls_enabled | lower }}
{% if wg_exporter_tls_enabled %}
WG_EXPORTER_TLS_CERT_FILE={{ wg_exporter_tls_cert_file }}
WG_EXPORTER_TLS_KEY_FILE={{ wg_exporter_tls_key_file }}
{% endif %}