# Service configuration
NODE_EXPORTER_USER={{ node_exporter_user }}
NODE_EXPORTER_GROUP={{ node_exporter_group }}
NODE_EXPORTER_PORT={{ node_exporter_port }}
NODE_EXPORTER_LISTEN_ADDRESS={{ node_exporter_listen_address }}

# Data directories
